<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="URulerView">
        <attr name="rulerMinScale" format="integer" />
        <attr name="rulerMaxScale" format="integer" />
        <attr name="rulerCenterScale" format="integer" />
        <attr name="rulerScalePerGap" format="integer" />
        <attr name="rulerCountForMaxScale" format="integer" />
        <attr name="rulerSmallScaleHeight" format="dimension" />
        <attr name="rulerMiddleScaleHeight" format="dimension" />
        <attr name="rulerSmallScaleColor" format="color" />
        <attr name="rulerMiddleScaleColor" format="color" />
        <attr name="rulerBigScaleColor" format="color" />
    </declare-styleable>

</resources>